extends admin
block div
    div.am-padding
        h1.am-text-center 
            if(edit.id)
               | Edit
            else
               | Add
        form.am-form.am-form-horizontal#cate_add_form(action="/admin/cate/add",method="post")
            div.am-form-group
                label(for="name").am-u-sm-2.am-form-label Title:
                div.am-u-sm-10
                    input(type="text" id="name" name="name" placeholder="Input title or name" value="#{edit.name}")
            div.am-form-group
                label(for="api_name").am-u-sm-2.am-form-label API:
                div.am-u-sm-10
                    input(type="text" id="api_name" name="api_name" placeholder="Input API source" value="#{edit.api_name}")
            div.am-form-group
                label(for="api_url").am-u-sm-2.am-form-label API Address:
                div.am-u-sm-10
                    input(type="text" id="api_url" name="api_url" placeholder="Input API url" value="#{edit.api_url}")
            div.am-form-group
                label(for="spider_url").am-u-sm-2.am-form-label Address
                div.am-u-sm-10
                    input(type="text" id="spider_url" name="spider_url" placeholder="Input crawler address" value="#{edit.spider_url}")

            div.am-form-group
                div.am-u-sm-10.am-u-sm-offset-2
                    input(type="hidden",name="edit_id" value="#{edit.id}")
                    button.am-btn.am-btn-primary.am-btn-block(type="submit") Submit
