extends layout
block body
    link(href="/css/futures.css" rel="stylesheet" type="text/css")
    script(src="/js/echarts.js",type="text/javascript")
    script(src="/js/futures.js",type="text/javascript")
    //script(src="https://cdn.jsdelivr.net/npm/@tensorflow/tfjs@0.11.4",type="text/javascript")
    script(src="https://cdn.jsdelivr.net/npm/@tensorflow/tfjs/dist/tf.min.js",type="text/javascript")

    div#good_id.am-hide #{goods.id}
    div.chart-container
        //标题
        div.title.am-padding-top
            h1.am-text-center.am-margin-bottom-0.am-margin-top #{goods.name}&nbsp;#{goods.api_id}
            h3.am-text-center.am-margin-0.am-text-danger 【#{goods.cate}】

        //内容
        div.am-g.am-margin-top-lg
            //左部
            div.am-u-sm-3.left
                ul.am-nav.am-text-right(data-am-sticky,data-am-scrollspynav="{offsetTop: 0}").scrollspy-nav
                    li.am-text-lg #{goods.name} Data View
                    li
                        select(data-am-selected)#chart_cate
                            option(value="area-line") Line Area
                            option(value="area-bar") Block Area
                    li
                        a(href="#paint-kline") k-Line
                    li
                        a(href="#paint-latest") Closing Price
                    li
                        a(href="#paint-open") Opening Price
                    li
                        a(href="#paint-max-min") Max-Min Price
                    li
                        div.am-input-group
                            label.am-u-sm-5.am-form-label Days
                            div.am-u-sm-7
                                input(type="number" id="day_num" style="width:100%").am-input
                    li
                        div.predict
                            h3.am-text-right Predict Next Day
                            p.am-text-warning Futures have risks, investment needs to be cautious, forecast for reference only
                            p#pre_data Predicting...
                            p.am-hide#now_data
                            p#percent_size


            //右部可视化数据图
            div.am-u-sm-9.right
                div#paint-kline.paint
                div#paint-latest.paint.am-margin-top-lg
                div#paint-open.paint.am-margin-top-lg
                div#paint-max-min.paint.am-margin-top-lg
